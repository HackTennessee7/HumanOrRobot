.containter-fluid
  #game-view
    .row
      .navbar.navbar-default.navbar-fixed-top
        .container
          h2.navbar-right score: {{score}}
    .row
      h1 Human or Robot?
    .container(ng-show="show == $index" ng-repeat="image in images")
      .row
        .col-md-4.col-md-offset-4
          img.img-responsive.img-circle(src='{{image.url}}')
      .row
        button.btn.btn-large.btn-success(type='button' data-toggle='modal' data-target='#answer-modal' ng-click='human($index)') Human
        button.btn.btn-large.btn-warning(type='button' data-toggle='modal' data-target='#answer-modal' ng-click='robot($index)') Robot
    
    include game-modals
